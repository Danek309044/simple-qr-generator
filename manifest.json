{
    "manifest_version": 3,
    "name": "Simple QR Code Generator",
    "version": "1.3.1",
    "description": "Generates a QR code based off on what website are you or the text you input.",
    "author": "Daniel Benýšek",
    "action":{
        "default_popup": "index.html",
        "default_title": "QR Generator"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "danek309044@proton.me"
        }
    },
    "icons": {
        "16": "src/icons/16.png",
        "128": "src/icons/128.png"
    },
    "permissions": [
        "tabs"
    ]
}
